<div class="p-5">
<div class="d-flex justify-content-between align-items-center">
  <h1 class="display-1 text-center">Listing Lists</h1>
  <div>
    <%= link_to 'Add List', new_list_path, class: 'btn btn-primary' %>
  </div>
</div>

  <div class="py-4 d-flex flex-wrap">
    <% @lists.each do |l| %>
  <div class="card card-body m-2 shadow-sm" style="max-width: 200px;">
    <% if l.photo.attached? %>
      <%= cl_image_tag l.photo.key, height: 150, width: 150, crop: :fill %>
    <% end %>


    <h3>
      <%= link_to l.name, list_path(l) %>
    </h3>
  </div>

    <% end %>
  </div>
</div>

