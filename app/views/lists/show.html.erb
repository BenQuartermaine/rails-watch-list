<div class="p-5">
  <h1 class="display-1"><%= @list.name %></h1>
  <% if @list.photo.attached? %>
    <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>


  <div>
    <%= link_to "Back to view all", lists_path, class: 'btn btn-primary my-3' %>
    <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: 'btn btn-outline-primary' %>
  </div>
</div>

<div class="p-5">
  <h1 class="display-4">Bookmarked Movies</h1>
  <% @list.bookmarks.each do |b| %>
  <div>
    <%= b.movie.title %> ----
    <%= b.comment %>
  </div>
  
  <% end %>
</div>